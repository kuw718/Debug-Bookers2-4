<table>
  <tbody>
    <% book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= link_to user_path(book_comment.user) do %>
            <%= image_tag book_comment.user.get_profile_image, size: '80x80' %><br>
            <%= book_comment.user.name %>
          <% end %>
        </td>
        <td><%= book_comment.comment %></td>
        <td>
          <% if current_user == book_comment.user %>
            <%= link_to "Destroy", book_book_comment_path(@book, book_comment), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-sm btn-danger", data: {"turbolinks" => false} %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= form_with(model: [book, book_comment], local: false) do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "w-100" %>
  <%= f.submit "送信" %>
<% end %>